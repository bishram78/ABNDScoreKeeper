<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/id_ah_tv_activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12dp"
        android:layout_marginEnd="@dimen/_18dp"
        android:layout_marginStart="@dimen/_18dp"
        android:layout_marginTop="@dimen/_12dp"
        android:drawablePadding="@dimen/_8dp"
        android:drawableStart="@drawable/ic_action_menu"
        android:gravity="center_vertical"
        android:text="@string/txt_ah_tv_action_bar_title"
        android:textColor="@color/whiteFF"
        android:textSize="@dimen/_20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/LLayoutDSBMain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        style="@style/TeamTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_ah_tv_team_a" />

                    <LinearLayout
                        style="@style/LLayoutDSBSub"
                        android:baselineAligned="false">

                        <LinearLayout
                            style="@style/LLayoutDSBEach"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                style="@style/ScoreTextMain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                style="@style/ScoreTextSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_ah_tv_c_goal" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/LLayoutDSBEach"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                style="@style/ScoreTextMain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                style="@style/ScoreTextSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_ah_tv_l_goal" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/LLayoutDSBEach"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                style="@style/ScoreTextMain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                style="@style/ScoreTextSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_ah_tv_h_goal" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/LLayoutDSBSub"
                        android:baselineAligned="false">

                        <LinearLayout
                            style="@style/LLayoutDSBEach"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                style="@style/ScoreTextMain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                style="@style/ScoreTextSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_ah_tv_s_goal" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/LLayoutDSBEach"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                style="@style/ScoreTextMain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                style="@style/ScoreTextSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_ah_tv_corner" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/LLayoutDSBEach"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                style="@style/ScoreTextMain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                style="@style/ScoreTextSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_ah_tv_foul" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="36dp"
                    android:background="@color/colorAccent" />

                <LinearLayout
                    style="@style/LLayoutDSBMain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        style="@style/TeamTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_ah_tv_team_b" />

                    <LinearLayout
                        style="@style/LLayoutDSBSub"
                        android:baselineAligned="false">

                        <LinearLayout
                            style="@style/LLayoutDSBEach"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                style="@style/ScoreTextMain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                style="@style/ScoreTextSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_ah_tv_c_goal" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/LLayoutDSBEach"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                style="@style/ScoreTextMain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                style="@style/ScoreTextSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_ah_tv_l_goal" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/LLayoutDSBEach"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                style="@style/ScoreTextMain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                style="@style/ScoreTextSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_ah_tv_h_goal" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/LLayoutDSBSub"
                        android:baselineAligned="false">

                        <LinearLayout
                            style="@style/LLayoutDSBEach"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                style="@style/ScoreTextMain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                style="@style/ScoreTextSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_ah_tv_s_goal" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/LLayoutDSBEach"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                style="@style/ScoreTextMain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                style="@style/ScoreTextSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_ah_tv_corner" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/LLayoutDSBEach"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                style="@style/ScoreTextMain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                style="@style/ScoreTextSub"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_ah_tv_foul" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_ah_ll_s_action"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/LLayoutActionItem">

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/cd_ah_iv_img_desc"
                        android:layout_weight="1"
                        android:background="@drawable/action_add_bkg"
                        android:src="@drawable/ic_action_add_white" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="@string/txt_ah_tv_center_goal"
                        style="@style/ActionTextCenter" />

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/cd_ah_iv_img_desc"
                        android:background="@drawable/action_add_bkg"
                        android:src="@drawable/ic_action_add_white" />
                </LinearLayout>

                <LinearLayout
                    style="@style/LLayoutActionItem">

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/cd_ah_iv_img_desc"
                        android:background="@drawable/action_add_bkg"
                        android:src="@drawable/ic_action_add_white" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="@string/txt_ah_tv_long_goal"
                        style="@style/ActionTextCenter" />

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/cd_ah_iv_img_desc"
                        android:background="@drawable/action_add_bkg"
                        android:src="@drawable/ic_action_add_white" />
                </LinearLayout>

                <LinearLayout
                    style="@style/LLayoutActionItem">

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/cd_ah_iv_img_desc"
                        android:background="@drawable/action_add_bkg"
                        android:src="@drawable/ic_action_add_white" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="@string/txt_ah_tv_head_goal"
                        style="@style/ActionTextCenter" />

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/cd_ah_iv_img_desc"
                        android:background="@drawable/action_add_bkg"
                        android:src="@drawable/ic_action_add_white" />
                </LinearLayout>

                <LinearLayout
                    style="@style/LLayoutActionItem">

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/cd_ah_iv_img_desc"
                        android:background="@drawable/action_add_bkg"
                        android:src="@drawable/ic_action_add_white" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="@string/txt_ah_tv_side_goal"
                        style="@style/ActionTextCenter" />

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/cd_ah_iv_img_desc"
                        android:background="@drawable/action_add_bkg"
                        android:src="@drawable/ic_action_add_white" />
                </LinearLayout>

                <LinearLayout
                    style="@style/LLayoutActionItem">

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/cd_ah_iv_img_desc"
                        android:background="@drawable/action_add_bkg"
                        android:src="@drawable/ic_action_add_white" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="@string/txt_ah_tv_corner_p"
                        style="@style/ActionTextCenter" />

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/cd_ah_iv_img_desc"
                        android:background="@drawable/action_add_bkg"
                        android:src="@drawable/ic_action_add_white" />
                </LinearLayout>

                <LinearLayout
                    style="@style/LLayoutActionItem">

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/cd_ah_iv_img_desc"
                        android:background="@drawable/action_add_bkg"
                        android:src="@drawable/ic_action_add_white" />

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:text="@string/txt_ah_tv_foul_p"
                        style="@style/ActionTextCenter" />

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/cd_ah_iv_img_desc"
                        android:background="@drawable/action_add_bkg"
                        android:src="@drawable/ic_action_add_white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_ah_btn_result"
            style="@style/ResultReset" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorAccent" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_ah_btn_reset"
            style="@style/ResultReset" />
    </LinearLayout>
</LinearLayout>
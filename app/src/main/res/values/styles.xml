<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LLayoutDSBMain">
        <item name="android:background">#77ffd640</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LLayoutDSBSub">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LLayoutDSBEach">
        <item name="android:layout_margin">@dimen/_8dp</item>
        <item name="android:background">@color/greenFadeFF</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/_8dp</item>
    </style>

    <style name="LLayoutActionItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="TeamTitle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/_8dp</item>
        <item name="android:textColor">@color/whiteFF</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ScoreTextMain">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/blackFF</item>
        <item name="android:textSize">@dimen/_48sp</item>
    </style>

    <style name="ScoreTextSub">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_10sp</item>
    </style>

    <style name="ResultReset">
        <item name="android:background">@drawable/result_reset_selector_bkg</item>
        <item name="android:textColor">@color/whiteFF</item>
        <item name="android:textSize">@dimen/_18sp</item>
    </style>

    <style name="ActionTextCenter">
        <item name="android:background">@color/yellowLight77</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/_12dp</item>
        <item name="android:paddingBottom">@dimen/_12dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
